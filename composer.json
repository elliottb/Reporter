{
    "require": {
        "phpunit/phpunit": "4.8.*"
    },
    "autoload": {
        "psr-4": { 
        	"Reporter\\": ["src", "tests"]
        }
    },
    "scripts": {
        "test-circle": "phpunit --coverage-text --coverage-html $CIRCLE_TEST_REPORTS/phpunit",
        "test": "phpunit --coverage-text --coverage-html tmp",
        "format": "phpcbf --standard=psr2 tmp"
    }
}
