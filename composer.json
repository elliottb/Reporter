{
    "require": {
        "phpunit/phpunit": "4.8.*"
    },
    "autoload": {
        "psr-4": { 
        	"Reporter\\": ["src", "tests"]
        }
    },
    "scripts": {
        "test-circle": "phpunit --log-junit $CIRCLE_TEST_REPORTS/phpunit/junit.xml tests",
        "test": "phpunit --coverage-text --coverage-html tmp",
        "format": "phpcbf --standard=psr2 src/"
    }
}
